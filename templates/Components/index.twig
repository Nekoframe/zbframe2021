{% if entry.components is defined and entry.components != '' %}
	{# Matrix Content Components #}
	{% for block in entry.components.all() %}

		{# Text  #}
		{% if block.type == "text" %}
			{% include "components/text" with { 'loopIndex' : loop.index } %}

        {# work #}
		{% elseif block.type == "work" %}
			{% include "components/work" with { 'loopIndex' : loop.index } %}

		{# image #}
		{% elseif block.type == "image" %}
			{% include "components/image" with { 'loopIndex' : loop.index } %}

		{% endif %}

	{% endfor %}
{% endif %}